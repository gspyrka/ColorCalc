<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kambey_user.colorcalc" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ColorCalc"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".showColor"
            android:label="@string/title_activity_show_color" >
        </activity>
        <activity
            android:name=".ShowColor"
            android:label="@string/title_activity_show_color"
            android:parentActivityName=".ColorCalc" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kambey_user.colorcalc.ColorCalc" />
        </activity>
    </application>

</manifest>
